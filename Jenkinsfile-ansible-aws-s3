pipeline {
    agent { label 'ansible-node' }

    environment {
        AWS_SHARED_CREDENTIALS_FILE = '/home/ec2-user/.aws/credentials'
    }

    stages {

        stage('Run Ansible Playbook') {
            steps {
                sh '''
                ansible-playbook ansible-aws-s3-deploy.yaml
                #ansible-playbook ansible-aws-s3-deploy.yaml --extra-vars "bucket_name=yaswanth-demo-s3-bucket-${BUILD_NUMBER}"
                '''
            }
        }
    }
}
